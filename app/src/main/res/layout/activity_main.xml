<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.logdata.logdata_android.MainActivity">

    <Button
        android:id="@+id/main_btn_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NullPointerException" />

    <Button
        android:id="@+id/main_btn_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IllegalArgumentException" />

    <Button
        android:id="@+id/main_btn_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ArrayIndexOutOfBoundsException" />

    <Button
        android:id="@+id/main_btn_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ClassNotFoundException" />

    <Button
        android:id="@+id/main_btn_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FileNotFoundException" />

</LinearLayout>
